<!DOCTYPE html>
<html>
  <head>
    <title>Melt | Customer Delight API</title>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>

    <script src="https://ajax.googleapis.com/ajax/libs/webfont/1.4.7/webfont.js"></script>
    <script>
      WebFont.load({
        google: {
          families: ["Montserrat:400,700","Open Sans:300,300italic,400,400italic,600,600italic,700,700italic,800,800italic","Lato:100,100italic,300,300italic,400,400italic,700,700italic,900,900italic"]
        }
      });
    </script>

  </head>

  <body>
    <%= render "flashes" -%>
    <%= render "general_top_nav" -%>

    <div id="how-it-works" class="tan-div">
      <div class="w-section content mid-content">
        <div class="w-clearfix">
          <p class="love-company-header">We &nbsp; &nbsp; &nbsp; Real Estate CRM, Inc.</p>
          <%= image_tag("heart.png", width: "20", class: 'heart-icon') %>
        </div>

        <div class="w-clearfix dashboard-wrapper">

          <%= render "general_navigation" -%>

          <div class="dashboard-right">

            <%= render "general_environment_selection" -%>

            <%= yield %>

          </div>
        </div>
      </div>
    </div>

    <%= render "dashboard_footer" -%>

    <%= render "javascript" %>
  </body>

</html>
