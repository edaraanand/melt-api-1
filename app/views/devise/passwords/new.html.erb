

<div class="w-section content header-content">
  <div class="sign-up-form-div">
    <a href="index.html" class="w-clearfix w-inline-block logo no-float">
      <%= image_tag("candy_piece of pie.png", height: 50, class: "logo-image") %>
    </a>
    <h3>Reset Password</h3>
    <div class="w-form">

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= devise_error_messages! %>

        <div class="field">
          <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "w-input sign-up-field"%>
        </div>

        <div class="actions">
          <%= f.submit "Reset my password", class: "w-button content-button full no-float" %>
        </div>
      <% end %>


    </div>
  </div>
  <p class="small">Return to <%= link_to("Sign in.", new_user_session_path) %>
  </p>
</div>

