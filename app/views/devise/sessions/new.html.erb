<div class="w-section content header-content">
  <div class="sign-up-form-div">
    <a href="index.html" class="w-clearfix w-inline-block logo no-float">
      <%= image_tag("candy_piece of pie.png", height: 50, class: "logo-image") %>
    </a>
    <h3>Welcome Back!</h3>

    <div class="w-form">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "w-input sign-up-field" %>
        </div>

        <div class="field">
          <%= f.password_field :password, autocomplete: "off", placeholder: "Enter your password", class: "w-input sign-up-field" %>
        </div>

        <div class="actions">
          <%= f.submit "Sign in", class: "w-button content-button full no-float" %>
        </div>
      <% end %>
    </div>
  </div>
  <p class="small">
    <%= link_to("Forgot your password?", new_user_password_path) %>
  </p>
  <p class="small">Dont' have an account? <%= link_to("Sign up.", new_user_registration_path) %></p>
</div>
